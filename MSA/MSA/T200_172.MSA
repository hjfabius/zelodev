CTC2:           PUSH    BC
		PUSH    DE
		PUSH    HL
		PUSH    AF
		PUSH    IX
		PUSH    IY

		LD	BC,0AFFH	;CARICO VALORE PER 
		LD	(WATCH_LOLA),BC ;CONTROLLO BLOCCO INTRRUPT

                LD      A,(DECORR)      ;SE EXTRA 
                CP      00H             ;CORREZIONE 
                JR      NZ,CTC21        ;ATTIVA SALTO.
CTC23:          LD      A,(MEMC)        ;FINE DELLA
		RES     B_PC_AVANTI,A   ;CORREZIONE          
		RES     B_PC_RITARDO,A             
		LD      (MEMC),A
		OUT     (PC),A
		LD	A,(ENB_DAC_LON)		;SE NON SONO IN DAC 
		CP	02H			;USCITA PROPORZIONALE
		JR	Z,CTC24			;ALL'ERRORE  SALTO (CORAZZA)

		;RESET DAC AL VALORE BASE

		CALL	DAC_INCR_DECR
		JR	CTC25
CTC24:
		LD	DE,800H		   ;SE USO GLI INTERVALLI(CORAZZA)			
		LD	(DACVAL),DE	   ;DI CORREZIONE DEVO FERMARE IL  		
		CALL	DAC_TRASM	   ;MOTORE ALLA FINE DEL CICLO 	(CORAZZA)
CTC25:
		LD      A,43H           ;RESETTO
		OUT     (CTC1_CMD),A    ;CTC1
		OUT     (CTC2_CMD),A    ;CTC2
                JR      CTC22           
CTC21:          LD      A,37H           ;CONTROLLO CTC1
		OUT     (CTC1_CMD),A         
                LD      A,40H           ;COSTANTE DI
		OUT     (CTC1_CMD),A    ;TEMPO
                LD      A,0D7H          ;CONTROLLO CTC2
                OUT     (CTC2_CMD),A    ;CARICO PER 
                LD      A,0FFH          ;EXTRA CORREZ.
		OUT     (CTC2_CMD),A

                LD      A,(DECORR)      ;SE E' MAGGIORE 
                DEC     A               ;DI UNO LA CORREZ-
                LD      (DECORR),A      ;ZIONE DIVENTA
                CP      00H             ;CONTINUA
                JR      NZ,CTC22

                LD      A,(CIDE75)      ;SE FATTO 75% 
                CP      00H             ;DEL CICLO
                JR      Z,CTC23         ;BLOCCO CORREZ.



CTC22:          POP     IY
		POP     IX
		POP     AF
		POP     HL
		POP     DE      
		POP     BC
		EI
		RETI


