CHK_CILINDRO_GATE:
		LD	HL,(CILMOL)
		LD	(COMP16B),HL

		LD	HL,05DCH		;CILINDRO MINIMO 150MM
		LD	(COMP16A),HL
		CALL	COMPARE16		; 1500 <=> CILMOL
		LD	A,(COMP16A)
		CP	01			; 1500 >   CILMOL	
		JR	Z,CHK_CILINDRO_NO


		LD	HL,061A8H		;CILINDRO MASSIMO 2500MM
		LD	(COMP16A),HL
		CALL	COMPARE16		;25000 <=> CILMOL
		LD	A,(COMP16A)
		CP	02			;25000 <  CILMOL	
		JR	Z,CHK_CILINDRO_NO
		
		JR	CHK_CILINDRO_OK		;150<CILIN<2500

CHK_CILINDRO_NO:
		LD	DE,(S_SVILUPPO_CILINDRO)
		CALL	SET_STATUS
		JR	CHK_GATE

CHK_CILINDRO_OK:
		LD	DE,(S_SVILUPPO_CILINDRO)
		CALL	RES_STATUS
		JR	CHK_GATE


CHK_GATE:
		LD	HL,(AMPGA)
		LD	(COMP16B),HL

		LD	HL,0005H		;GATE MINIMO 5MM
		LD	(COMP16A),HL
		CALL	COMPARE16		; 5   <=> GATE
		LD	A,(COMP16A)
		CP	01			; 5   >   GATE	
		JR	Z,CHK_GATE_NO


		LD	HL,0258H		;GATE MASSIMO 600MM
		LD	(COMP16A),HL
		CALL	COMPARE16		;600 <=> GATE
		LD	A,(COMP16A)
		CP	02			;600 <  GATE	
		JR	Z,CHK_GATE_NO
		
		JR	CHK_GATE_OK		;5<GATE<600

CHK_GATE_NO:
		LD	DE,(S_AMPIEZZA_GATE)
		CALL	SET_STATUS
		JR	CHK_CILINDRO_GATE_FINE

CHK_GATE_OK:
		LD	DE,(S_AMPIEZZA_GATE)
		CALL	RES_STATUS
		JR	CHK_CILINDRO_GATE_FINE

