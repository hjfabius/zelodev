;		DIVISIONE 32 BIT
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&		
;#DEFINE MSB_SET(X) ((X >> (8*SIZEOF(X)-1)) & 1)
;UNSIGNED LONG _DIV32 (UNSIGNED LONG X, UNSIGNED LONG Y)
;{
;  UNSIGNED LONG RESTE = 0L;
;  UNSIGNED CHAR COUNT = 32;
;  BOOL C;
;
;  DO
;  {
;    // RESTE: X <- 0;
;    C = MSB_SET(X);
;    X <<= 1;
;    RESTE <<= 1;
;    IF (C)
;      RESTE |= 1L;
;
;    IF (RESTE >= Y)
;    {
;      RESTE -= Y;
;      // X <- (RESULT = 1)
;      X |= 1L;
;    }
;  }
;  WHILE (--COUNT);
;  RETURN X;
;}
;
;
;DIV32 (UNSIGNED LONG X, UNSIGNED LONG Y)
DIV32_INNER:
	PUSH	IX
	LD	IX,00H
	ADD	IX,SP
	LD	HL,0FFFAH
	ADD	HL,SP
	LD	SP,HL
;unsigned long reste = 0L;
	XOR	A
	LD	(IX-4),A
	LD	(IX-3),A
	LD	(IX-2),A
	LD	(IX-1),A
;do
	LD	(IX-5),20H
DIV32_INNER_01:
;c = MSB_SET(x);
	LD	A,(IX+7)
	RLC	A
	AND	01H
	LD	C,A
	LD	(IX-6),C
;x <<= 1;
	LD	A,01H
	PUSH	AF
	INC	SP
	LD	L,(IX+6)
	LD	H,(IX+7)
	PUSH	HL
	LD	L,(IX+4)
	LD	H,(IX+5)
	PUSH	HL
	CALL	RLULONG
	LD	B,H
	LD	C,L
	POP	AF
	POP	AF
	INC	SP
	LD	(IX+4),C
	LD	(IX+5),B
	LD	(IX+6),E
	LD	(IX+7),D
;reste <<= 1;
	LD	A,01H
	PUSH	AF
	INC	SP
	LD	L,(IX-2)
	LD	H,(IX-1)
	PUSH	HL
	LD	L,(IX-4)
	LD	H,(IX-3)
	PUSH	HL
	CALL	RLULONG
	LD	B,H
	LD	C,L
	POP	AF
	POP	AF
	INC	SP
	LD	(IX-4),C
	LD	(IX-3),B
	LD	(IX-2),E
	LD	(IX-1),D
;if (c)
	XOR	A
	OR	(IX-6)
	JP	Z,DIV32_INNER_02
;reste |= 1L;
	LD	A,(IX-4)
	OR	01H
	LD	(IX-4),A
DIV32_INNER_02:
;if (reste >= y)
	LD	A,(IX-4)
	SUB	(IX+8)
	LD	A,(IX-3)
	SBC	A,(IX+9)
	LD	A,(IX-2)
	SBC	A,(IX+10)
	LD	A,(IX-1)
	SBC	A,(IX+11)
	JP	C,DIV32_INNER_03
;reste -= y;
	LD	A,(IX-4)
	SUB	(IX+8)
	LD	(IX-4),A
	LD	A,(IX-3)
	SBC	A,(IX+9)
	LD	(IX-3),A
	LD	A,(IX-2)
	SBC	A,(IX+10)
	LD	(IX-2),A
	LD	A,(IX-1)
	SBC	A,(IX+11)
	LD	(IX-1),A
;x |= 1L;
	LD	A,(IX+4)
	OR	01H
	LD	(IX+4),A
DIV32_INNER_03:
;while (--count);
	DEC	(IX-5)
	XOR	A
	OR	(IX-5)
	JP	NZ,DIV32_INNER_01
;return x;
	LD	L,(IX+4)
	LD	H,(IX+5)
	LD	E,(IX+6)
	LD	D,(IX+7)

	LD	SP,IX
	POP	IX
	RET
DIV32_INNER_END:
             

