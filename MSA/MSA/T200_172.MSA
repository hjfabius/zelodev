RESET_PIO:            
		LD	HL,INIT_Z80
		LD	(0DFFFH),HL
		LD	(0DFFDH),HL
		LD      SP,0DFFDH       ;DEF.AREA STACK
		RETI

INIT_Z80:
		LD	HL,VIA
		LD	(0DFFFH),HL
		LD      SP,0DFFFH       ;DEF.AREA STACK

		IM      2               ;IMPOSTA MODO PIO = 2

                LD      A,0DAH          ;INDIRIZZO INIZIALE VETTORE DI INTERRUPT
		LD      I,A		;I INTERRUPT VECTOR BASE REGISTER, 8 BITS

                LD      IY,PIOA         ;INSERISCO FUNZIONE DI GESTIONE INTERRUPT
		LD      (TAP1),IY       ;NEL VETTORE DI INTERRUPT

	
		LD      A,20H           ;COMUNICO LA POSIZIONE DEL VETTORE DI INTERRUPT 
		OUT     (PA_CMD),A      ;DA CHIAMARE PER PIO A
					;V7 V6 V5 V4 V3 V2 V1 0			

		LD      A,11001111B     ;PORTA A MODO 3	(SEGUE IO E IRQ)
		OUT     (PA_CMD),A	;M1 M0 X X 1 1 1 1


                LD      A,00010001B     ;IO PORT (0,4 IN)
		OUT     (PA_CMD),A	;IO7 IO6 IO5 IO4 IO3 IO2 IO1 IO0 

		LD      A,10010111B     ;IRQ CONTROL (ABILITA E SEGUE MASK)
		OUT     (PA_CMD),A	;Enable	 AND/	High/	Mask	  0 1 1 1
					;  Int	 OR	Low	Follows

		LD      A,11101111B     ;IRQ MASK (BIT 4)
		OUT     (PA_CMD),A	;MB7 MB6 MB5 MB4 MB3 MB2 MB1 MB0



                LD      IY,PIOB         ;IND.ROUT.INT.
		LD      (TAP2),IY       ;CAR.TAB.INT.
		LD      A,22H           ;VET.INT.PIO B
		OUT     (PB_CMD),A      ;CONTROLLO PIO B
		LD      A,0CFH          ;PORTA B MODO 3
		OUT     (PB_CMD),A
                LD      A,1EH           ;0567 OUT 1234 IN 1E PB 5 MESSO OUT PER PROBLEMA BLOCCO KALE DIVENTA 169 PPUU
		OUT     (PB_CMD),A
		LD      A,97H           ;PAR.CONT.INTER.
		OUT     (PB_CMD),A
                LD      A,0FDH          ;P.MAS.BIT 0234567  ;0DDH TO USE RS232
		OUT     (PB_CMD),A      ;ALL'INTERUPT


                LD      IY,CTC0         ;IND.ROUT.CTC0.
		LD      (TAB0),IY       ;CAR.TAB.INT.CAN0
		LD      A,30H           ;VET.IND.CTC0
		OUT     (CTC0_CMD),A    ;VET.SEMPRE IN 0
                LD      IY,CTC1         ;IND.ROUT.CTC1
		LD      (TAB1),IY       ;CAR.TAB.INT.CAN1
		LD      A,32H           ;VET.IND.CTC1
		OUT     (CTC0_CMD),A
                LD      IY,CTC2         ;IND.ROUT.CTC2
		LD      (TAB2),IY       ;CAR.TAB.INT.CAN2
		LD      A,34H           ;VET.IND.CTC2
		OUT     (CTC0_CMD),A
                LD      IY,CTC3         ;IND.ROUT.CTC3
		LD      (TAB3),IY       ;CAR.TAB.INT.CAN3
		LD      A,36H           ;VET.IND.CTC3
		OUT     (CTC0_CMD),A    ;VET.CARICATO


		;DEFAULT PER PORTA A
		LD	A,(MEMA)	
		RES	1,A		;RESET RICHIESTA DI TRASMISSIONE	
		SET     7,A		;ABILITO SEMPRE LA GENERAZIONE DEL GATE
		LD	(MEMA),A
	 	OUT     (PA),A


		;RESET DELLA PORTA C
		LD      A,(MEMC)        ;RESETTO LE USCITE
		RES     B_PC_AVANTI,A             
		RES     B_PC_RITARDO,A             
		RES	B_PC_ALLARME,A
		RES     B_PC_FUNZ,A             
		RES     B_PC_DESTRA,A             
		RES     B_PC_SINISTRA,A             
		OUT     (PC),A
		LD      (MEMC),A
;PROVATO A MODIFICARE CON LA PARTE CHE SEGUE PERCHE IN MODALITA' TWIN  SALTUARIAMENTE IL RELE
;DI COMMUTAZIONE DALLA CONDIZIONE DI RIPOSO SI ECCITA PER UN  BREVISSIMO TEMPO 3/04/08
;		;RESET DELLA PORTA D
;		LD	A,0FFH		;RESETTO LE USCITE
;		SET	3,A		;SETTO IL CLOCK DEL DAC BASSO IN MODO CHE SIA PRONTO A RICEVERE IL DATO
;		RES	4,A		;SETTO IL DAC ALTO IN MODO CHE SIA PRONTO A RICEVERE IL DATO
;		OUT	(PD),A
;		LD	(MEMD),A

		;NUOVO ASSETTO DELLA PORTA D 3/04/08
		LD	A,(MEMD)		;RESETTO LE USCITE
		SET	3,A		;SETTO IL CLOCK DEL DAC BASSO IN MODO CHE SIA PRONTO A RICEVERE IL DATO
		RES	4,A		;SETTO IL DAC ALTO IN MODO CHE SIA PRONTO A RICEVERE IL DATO
		LD	(MEMD),A
		OUT	(PD),A
		
		LD	BC,(WATCH_LOLA)	;SE QUANDO PASSO DI QUI 
		LD	A,B		;PERCHE' WATCH_LOLA
		CP	00H		;E' ANDATA AZERO SALTO
		JR	NZ,PARDA_1	;L'AZZERAMENTO DELLE
		LD	A,C		;MEMORIE VOLATILI
		CP	00H
		JR	Z,PARDA_2
PARDA_1:	
                ;AZZERAMENTO DA 0C000H A 0CFFFH (MEMORIA VOLATILE)
		LD      A,00H
                LD      (TABCON),A      ;LOC. INIZIALE
                LD      HL,TABCON
                LD      DE,TABCON+01H
                LD      BC,0FFFH
		LDIR                    
PARDA_2
		LD	BC,0AFFH	;CARICO VALORE PER 
		LD	(WATCH_LOLA),BC ;CONTROLLO BLOCCO INTRRUPT

		LD      A,04H           ;PER NON AVERE IN
		LD      (MATTES),A      ;DECREMENTO FFH
		LD      (CONSAL),A

                LD      (CONSAT),A

		LD      A,(TIRCIC)      ;CARICO LE MEM.
		LD      (INCREM),A      ;A DECREMENTO
		LD      (DECREM),A      ;DEL MOTOPOTENZ.
                LD      (TIRCIR_ATT),A

	
		CALL	CAL_WATCHDOG_ST7	;CALCOLA TEMPO WATCHDOG
		CALL	FAITAB	
		CALL	AZZER_MSB
		CALL    DEFAUL
		CALL	FORCE_STATUS		;RESET STATUS ALLARMI
                CALL    VARERR
		CALL	CAL_CILINDRO
		CALL	FASE_COINCIDENZA	;INVIO FASE AI CONTATORI HW

		LD	A,(ENB_DAC_LON)		;VERIFICO SE SONO
		CP	02H			;CON DAC IN USCITA PROPORZIONALE
		JR	NZ,INIZIO_01		;SE LO SONO METTO A RIPOSO IL 
		LD	DE,800H			;MOTORE (CORAZZA)			
		LD	(DACVAL),DE
		CALL	DAC_TRASM
		JR	INIZIO_02
INIZIO_01:
		;RESET DAC A VALORE BASE
		CALL	DAC_INCR_DECR

INIZIO_02:
		;ABILITA INTERRUPT
		EI	

		;RICHIEDI TUTTI I PARAMETRI A ST7
		CALL	SEND_INIT_Z80


;çççççççççççççççççççççççççççççççççççççççççççççççççççç
                LD      IY,ARR_TMP
		LD      (TMP_CURSOR),IY
		
		LD      A,00H
                LD      (ARR_TMP),A      ;LOC. INIZIALE
                LD      HL,ARR_TMP
                LD      DE,ARR_TMP+01H
                LD      BC,00FFH
