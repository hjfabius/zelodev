CHK_SPEED_ZERO:	;CONTROLLO INGRESSO PIN PER UN PO' DI TEMPO
		;SE NON RICEVO UN IMPULSO DELL'ENCODER 2024
		;SIGNIFICA CHE LA MACCHINA E' FERMA

		LD      BC,01FFFH
CHK_SPEED_ZERO1:
		DEC     BC
		LD      A,B
		OR      C
		JR      Z,SPEED_IS_ZERO 
		IN      A,(PB)			;QUANDO LA
		BIT     4,A			;MACCHINA GIRA
		JR      Z,CHK_SPEED_ZERO1		;ESEGUE IL CONTROLLO
CHK_SPEED_ZERO2:
		DEC     BC			;SE NO
		LD      A,B			;ASPETTA E
		OR      C			;METTE ZERO
		JR      Z,SPEED_IS_ZERO		;LA VELOCITA'
		IN      A,(PB)          
		BIT     4,A             
		JR      NZ,CHK_SPEED_ZERO2
		JR      CHK_SPEED_RIPARTI

SPEED_IS_ZERO:           
		LD	BC,0000H		;SE ARRIVO QUI
		lD	(VELIMP),BC
		LD	(VELIST),BC		;LA VELOCITA' = 0
		LD	(VELMED),BC		;SETTO LE VARIABILI ED INVIO
		LD	BC,0FFFFH
		LD	(VELDIS),BC

		LD	A,(ENB_DAC_TIR)		;SE IL DAC TIRO   (CORAZZA)	UGO
		CP	00H			;NON E' ABILITTATO SALTO	
		JR	NZ,CHK_SPEED_ZERO3
		LD      A,(MEMC)		;SE SONO IN MANUALE E
		BIT     B_PC_RITARDO,A		;STO USANDO I TASTI
		JR	NZ,CHK_SPEED_ZERO3	;AVANTI,RITARDO SALTO
		BIT     B_PC_AVANTI,A		;E NON FERMO 
		JR	NZ,CHK_SPEED_ZERO3

		LD	DE,800H					
		LD	(DACVAL),DE
		CALL	DAC_TRASM
CHK_SPEED_ZERO3:
		CALL	SPEED_LOW		;MANDO MESSAGGIO ALLARME

		LD      A,(AUMALO)		;SE NON E' IN MANUALE SALTO
	        CP	00H			
		JR      Z,CHK_SPEED_ZERO_FINE	

               CALL    RESEPC			;FACCIO IL RESET DELLE USCITE

CHK_SPEED_ZERO_FINE:
		RET

CHK_SPEED_RIPARTI:;QUESTA PARTE SERVE PER QUANDO SONO IN MANUALE
		  ;E MI SONO FERMATO. IN MODO CHE ALLA PARTENZA
		  ;VEGA RICARICATO IL VALORE DAC DI BASE
		LD	DE,(DACVAL)	
		LD	HL,800H
		SBC	HL,DE			
		JR	Z,CHK_SPEED_ZERO5      ;SE MI SONO FERMATO AGGIORNO
		JR	C,CHK_SPEED_ZERO4      ;NELLE ALTRE CONDIZIONI ESCO	
		JR	NC,CHK_SPEED_ZERO6
CHK_SPEED_ZERO4:
		CCF
		JR	CHK_SPEED_ZERO6
CHK_SPEED_ZERO5:
		LD	DE,(DACBASE)		;E AGGIORNO DAC
		LD	(DACVAL),DE
		CALL	DAC_TRASM
CHK_SPEED_ZERO6:
		RET
