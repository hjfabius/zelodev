;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		DECREMENTA CONTATORE A 32 BIT
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&		
DEC32:
		EXX
		
		LD	HL,(COUNTER32)		;INDIRIZZAMENTO INDIRETTO
		INC	HL			;VERSO LA WORD BASSA
		INC	HL

		
		LD	E,(HL)			;CARICO LA WORD BASSA IN DE
