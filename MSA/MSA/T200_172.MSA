;	TABELLA PER IL SALVATAGGIO TEMPORANEO DI UN VALORE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

HISTORY:
                PUSH    BC
		PUSH    DE
		PUSH    HL
		PUSH    AF
		PUSH    IX
		PUSH    IY


                LD      IY,(TMP_CURSOR)
		LD	BC,(VELMED)  ;<<- SOSTITUIRE CON LA VARIABILE DA MONITORARE
                LD      (IY+00H),B
                INC     IY
                LD      (IY+00H),C
                INC     IY

                LD      (TMP_CURSOR),IY
                LD      HL,0DBFFH
                LD      DE,(TMP_CURSOR)
                SBC     HL,DE
                JR      NC,HISTORYEXIT
                CCF
                LD      IY,ARR_TMP
                LD      (TMP_CURSOR),IY
HISTORYEXIT:
                POP     IY
		POP     IX
		POP     AF
		POP     HL
		POP     DE
		POP     BC
                RET



