;		CALCOLO CODICE BIANCO E CODICE NERO
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
CAL_CODICE:
		;RESET VALORI DIVISIONE E MOLTIPLICAZIONE 32BIT
		LD	BC,0000H
		LD	(DIV32_DIVID_H),BC
		LD	(DIV32_DIVID_L),BC
		LD	(DIV32_DIVIS_H),BC
		LD	(DIV32_DIVIS_L),BC
		LD	(DIV32_QUOZ_H),BC
		LD	(DIV32_QUOZ_L),BC

		LD      (MDO032),BC     
		LD      (MDO232),BC     
		LD      (MRE032),BC     
		LD      (MRE232),BC     
		LD	(PTO032),BC
		LD	(PTO232),BC
		
		
CAL_CODICE_NERO:
		;CODICE_NERO = (4096/CILIN) * 0.5 = 2048/CILIN
		LD	BC,0800H	
		LD	(DIV32_DIVID_L),BC
		LD	BC,(CILIN)	
		LD	(DIV32_DIVIS_L),BC
		CALL	DIV32
		LD	BC,(DIV32_QUOZ_L)
		LD	(CODICE_NERO),BC



CAL_CODICE_BIANCO:
		LD	A,(F4_DIMENSION)
		CP	00H
		JR	Z,CAL_CODICE_BIANCO_GATE
		
CAL_CODICE_BIANCO_DIMENSION:
		;CODICE_BIANCO = (4096/CILIN) * F4_DIMENSION	= (4096 * F4_DIMENSION) / CILIN
		LD	BC,1000H
		LD	(MDO032),BC

		LD	BC,(F4_DIMENSION)
		LD	(MRE032),BC

		JR	CAL_CODICE_BIANCO_BOTH

CAL_CODICE_BIANCO_GATE:
		;CODICE_BIANCO = (4096/CILIN) * (GATE/2)	= (2048 * GATE) / CILIN
		LD	BC,0800H
		LD	(MDO032),BC

		LD	BC,(AMPGA)
		LD	(MRE032),BC

		JR	CAL_CODICE_BIANCO_BOTH
		
CAL_CODICE_BIANCO_BOTH:
		CALL    MOL32
		LD      BC,(PTO032)
		LD	(DIV32_DIVID_L),BC

		LD      BC,(PTO232)
		LD	(DIV32_DIVID_H),BC

		LD	BC,(CILIN)	
		LD	(DIV32_DIVIS_L),BC

		CALL	DIV32

		LD	BC,(DIV32_QUOZ_L)
		LD	(CODICE_BIANCO),BC

CAL_CODICE_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		RICONOSCIMENTO CODICE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

CODICE:
		CALL	SET_GUAD_S1

		LD	A,(F4_DIMENSION)	;SE F4_DIMENSION = 600 (MASSIMO VALORE CONSENTITO)
		CP	58H			;USO LA RICERCA EASY (PRIMO SEGNO NERO VISIBILE)
		JR	NZ, CODICE_WAIT_B

		LD	A,(F4_DIMENSION+01H)
		CP	02H	
		JR	NZ, CODICE_WAIT_B
		
		CALL	CODICE_EASY

		JP	CODICE_FINE



CODICE_WAIT_B:					;ATTENDO IL PRIMO SEGNO BIANCO
		IN      A,(PB)          
		BIT     2,A		
		JR	Z,CODICE_WAIT_B		


CODICE_N1:					;ATTENDO IL PRIMO SEGNO NERO
		IN      A,(PB)          
		BIT     2,A		
		JR	NZ,CODICE_N1

		IN      A,(10H)			;VALORE ENCODER ATTUALE
		LD      C,A
		IN      A,(20H)
		LD      B,A	
		LD	(CODICE_ENC_N1),BC

CODICE_B1:					;ASPETTA MENTRE LEGGE BIANCO
		IN      A,(PB)          
		BIT     2,A		
		JR	Z,CODICE_B1

		IN      A,(10H)			;VALORE ENCODER ATTUALE
		LD      L,A
		IN      A,(20H)
		LD      H,A	
		LD	(CODICE_ENC_B1),HL

		LD	DE,1000H		;HL = MOD(4096+HL-BC, 4096) 
		ADD	HL,DE
		AND	A
		SBC	HL,BC

		LD	A,H		
		AND	0FH
		LD	H,A
						
		AND	A			;RESET CARRY
		LD	BC,(CODICE_BIANCO)
		SBC	HL,BC			
		LD	BC,(CODICE_ENC_B1)	;AGGIORNO IL VALORE PRECEDENTE
		JR	C,CODICE_N1		;HL<CODICE_BIANCO



CODICE_N2:					;ASPETTA MENTRE LEGGE NERO
		IN      A,(PB)          
		BIT     2,A		
		JR	NZ,CODICE_N2

		IN      A,(10H)			;VALORE ENCODER ATTUALE
		LD      L,A
		IN      A,(20H)
		LD      H,A	
		LD	(CODICE_ENC_N2),HL

		LD	DE,1000H		;HL = MOD(4096+HL-BC, 4096) 
		ADD	HL,DE
		AND	A
		SBC	HL,BC

		LD	A,H		
		AND	0FH
		LD	H,A

		AND	A			;RESET CARRY
		LD	BC,(CODICE_NERO)
		SBC	HL,BC			
		LD	BC,(CODICE_ENC_N2)	;AGGIORNO IL VALORE PRECEDENTE
		JR	NC,CODICE_B2		;HL>=CODICE_NERO

		LD	(CODICE_ENC_N1),BC
		JR	CODICE_B1


CODICE_B2:					;ASPETTA MENTRE LEGGE BIANCO
		IN      A,(PB)          
		BIT     2,A		
		JR	Z,CODICE_B2

		IN      A,(10H)			;VALORE ENCODER ATTUALE
		LD      L,A
		IN      A,(20H)
		LD      H,A	
		LD	(CODICE_ENC_B2),HL

		LD	DE,1000H		;HL = MOD(4096+HL-BC, 4096) 
		ADD	HL,DE
		AND	A
		SBC	HL,BC

		LD	A,H		
		AND	0FH
		LD	H,A
						
		AND	A			;RESET CARRY
		LD	BC,(CODICE_BIANCO)
		SBC	HL,BC			
		LD	BC,(CODICE_ENC_B2)	;AGGIORNO IL VALORE PRECEDENTE
		JP	C,CODICE_N1		;HL<CODICE_BIANCO


		;TROVATO SEGNO
		AND	A		;RESET CARRY

CODICE_FINE:
		RET



