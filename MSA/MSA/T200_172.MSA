;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ROUTINE DI COMPARAZIONE A 16 BIT
;		COMP16A <=> COMP16B
;		RITORNA IN COMP16A
;		  0 A=B
;		  1 A>B
;		  2 A<B
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

COMPARE16:
		AND	A		;RESET CARRY

		LD	HL,(COMP16A)
		LD	BC,(COMP16B)
		SBC	HL,BC

		JR	Z,COMPARE_A_E_B
		JR	C,COMPARE_A_L_B
		JR	COMPARE_A_G_B

COMPARE_A_E_B:	
		LD	BC,0000H
		LD	(COMP16A),BC
		JR	COMPARE16_FINE
COMPARE_A_G_B:
		LD	BC,0001H
		LD	(COMP16A),BC
		JR	COMPARE16_FINE
COMPARE_A_L_B:
		LD	BC,0002H
		LD	(COMP16A),BC
		JR	COMPARE16_FINE

COMPARE16_FINE:
		AND	A		;RESET CARRY
		RET


