		LD      (MEMB),A
		OUT     (PB),A
		LD      D,0FFH		;5 SECONDI
TES1:           LD      BC,0A00H        
TES2:           IN      A,(PB)          
		BIT     2,A
		JR      NZ,TESSI
		DEC     BC		;DI TEST 
		LD      A,B
		
		OR      C                
		JR      NZ,TES2         
		DEC     D
		LD      A,00H
		CP      D
		JR      NZ,TES1
		CALL	FORCE_STATUS
		LD	DE,(S_TEST_TESTINA)
		CALL	SET_STATUS		;TEST FALLITO
		JR	ENDTEST
