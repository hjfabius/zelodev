;		VIENE SCATENATO ALLA FINE DEL GATE		
;		VERIFICA POSIZIONE S1
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&


CTC0:           PUSH    BC              
		PUSH    DE
		PUSH    HL
		PUSH    AF
		PUSH    IX
		PUSH    IY

		LD	BC,0AFFH	        ;CARICO VALORE PER 
		LD	(WATCH_LOLA),BC         ;CONTROLLO BLOCCO INTRRUPT

                LD      A,01H			;SEGNALA AL MAIN CHE HA LETTO
		LD      (MCALER),A		;IN MODO CHE FACCIA CALCOLI UNA SOLA VOLTA PER GIRO

		LD	A,(ARR_RICAUTO+00H)	;CONTROLLO SE SONO IN FASE AUTOMATICA
		CP	01H
		JP	Z,CTC0_FINE		;SE FASE SALTO TUTTI CONTROLLI SUCESSIVI

                LD      A,(ENCOD1)		;SE NON STO FACENDO IL TEST DELL'ENCODER   
                CP      00H			;SALTA   
                JR      Z,CTC01  
		
                CP      01H		;SE STO FACENDO IL TEST DELL'ENCODER
                JP      Z,CTC0_FINE
                LD      A,(ENCOD2)     ;INCREMENTO
                INC     A              ;A OGNI 255
                LD      (ENCOD2),A     ;IMPULSI
                LD      A,0DFH         ;RICARICO CTC0 
		OUT     (CTC0_CMD),A
                LD      A,0FFH
                OUT     (CTC0_CMD),A
                JP      CTC0_FINE          

CTC01:          
		IN      A,(30H)         ;LEGGO IL VALORE
		LD      E,A             ;DI PIENO
		IN      A,(40H)
		LD      D,A
                LD      (PIENO1),DE
		IN      A,(50H)         ;LEGGO IL VALORE
		LD      E,A             ;DELLA POSIZIONE
		IN      A,(60H)         ;DI S1
		LD      D,A
                LD      (POSIZ1),DE
		IN      A,(61H)         ;LEGGO IL VALORE
		LD      E,A             ;DI ENCODER
		IN      A,(62H)         ;ALL'ARRIVO DI S1
		LD      D,A
                LD      (FASES1),DE


		CALL	CHKPRINT	;CONTROLLA SE C'E' SEGNO E/O SETTA VARIABILE ALLARME RELATIVO

		OUT     (52H),A         ;IMPULSO A ZERO SU MONOSTABILE DA 0,5 mS 
					;PER RESETTARE TUTTI I FLIP-FLOP

		LD      A,43H		;RESETTO IL CTC 0
		OUT     (CTC0_CMD),A


		LD      HL,(FASE)       ;CARICO IL 
		LD      A,H             ;CONTATORE PER
		OUT     (20H),A         ;LEGGERE POI S1
		LD      A,L
		OUT     (10H),A         
		LD      A,43H
		OUT     (CTC0_CMD),A
CTC03:
		CALL	SPEED_CALC		;AGGIORNA VELOCITA' IMPULSIVA
		CALL	CHK_CILINDRO_GATE	;CONTROLLO DEI PARAMETRI GATE E CILINDRO  ;TODO: PROBABILMENTE E' INUTILE

CTC0_FINE:		
	
		LD	A,(MEMA)	
		SET     7,A		;ABILITO SEMPRE LA GENERAZIONE DEL GATE
		LD	(MEMA),A
	 	OUT     (PA),A

		POP     IY
		POP     IX
		POP     AF
		POP     HL
		POP     DE
		POP     BC
		EI
		RETI


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		INTERRUPT DI GESTIONE TIMER DI CORREZIONE
;		E IN FASE AUTOMATICA CONTATORE DI NUMERO DI GIRI EFFETTUATI
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&


CTC1:
		EX      (SP),HL		;SCRIVO IN HL IL VALORE CORRENTE DELLO STACK POINTER
		PUSH    BC
		PUSH    DE
		PUSH    AF
		PUSH    IX
		PUSH    IY

		LD	BC,0AFFH	;CARICO VALORE PER 
		LD	(WATCH_LOLA),BC ;CONTROLLO BLOCCO INTRRUPT


		LD      A,(ENCOD1)      ;VEDO SE SONO IN TEST ENCODER
		CP      00H
                JR      Z,CTC16
		CP      01H
                JR      Z,CTC17
		CP      02H
                JR      Z,CTC18


CTC17:          LD      A,02H           ;STACK POINTER = PARTENZA TEST ENCODER
		LD      (ENCOD1),A
                LD      HL,ENC2
                JP      CTC1_FINE           

CTC18:          LD      HL,ENC6         ;STACK POINTER = FINE TEST ENCODER            
                JP      CTC1_FINE
		



CTC16:          LD      A,(ARR_RICAUTO+00H)	;CONTROLLA SE SONO IN RICERCA AUTOMATICA
		CP      01H
		JR      Z,CTC12
	
CTC10:          
		;NON SONO NE IN RICERCA AUTOMATICA NE IN TEST ENCODER
		;SPENGO IL CTC1 COME TIMER
		LD      A,43H
		OUT     (CTC1_CMD),A	
		JR	CTC1_FINE		


CTC12:          
		;SONO IN RICERCA AUTOMATICA
		CALL    GAINS1     
		CALL	SET_GUAD_S1


                LD      A,(ARR_RICAUTO+02H)	;CONTROLLO SE ESAURITI I CICLI DI FASATURA AUTOMATICA
		DEC     A
		LD      (ARR_RICAUTO+02H),A
		CP      00H
		JR      NZ,CTC1_FINE		;SE LO SONO INVIO MESSAGGIO DI FASE FALLITA

		CALL	FASE_FALLITA

		LD      HL,MAIN			;STACK POINTER = MAIN
		JR	CTC1_FINE

CTC1_FINE:          
		POP     IY              
		POP     IX              
		POP     AF
		POP     DE      
		POP     BC
		EX      (SP),HL
	        EI              
		RETI




