;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUB-ROUTINE CALCOLA VELOCITA IMPULSIVA - VELIMP
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

SPEED_CALC:
                LD      BC,011DH        ;4mS TEMPO   
                LD      IX,VELIMP       ;PER MISURARE
                LD      A,00H           ;GLI IMPULSI
                LD      (IX+01H),A
                LD      A,057H          ;SETTO CTC0 COME TIMER
                OUT     (CTC0_CMD),A    ;SENZA INTERUPT
                LD      A,0FFH          ;PARTENDO DA 0FFH
                OUT     (CTC0_CMD),A         
SPEED_C1:         
		IN      A,(CTC0_CMD)    ;NEL CASO IL 
                CP      00H             ;DECREMENTO 
                JR      NZ,SPEED_C2     ;ARRIVI A ZERO
                INC     (IX+01H)        ;LO MEMORIZZO
SPEED_C2:         
		DEC     BC              
                LD      A,B
                OR      C
                JR      NZ,SPEED_C1       
                IN      A,(CTC0_CMD)    ;IMPULSI PROPOR     
                CPL                     ;ALLA VELOCITA.
		LD      (MOLPL),A	;AVENDO FATTO
                LD      BC,0004H	;LA MISURA IN 4mS
		LD      (MOLTI),BC	;DEVO MOLTIPLICARE X 4
                CALL    MOLT		;PROBLEMA SORTO IN UTECO
		LD      BC,(PROD)       ;PRIMA LA MISURA ERA 
                LD      (VELIMP),BC     ;FATTA IN 16mS 
                 
SPEED_CALC_FINE:
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;       SUB-RUTINE FERMO MOTORE IN PASSAGGIO MAN/AUTO USANDO
;	IL DAC CON USCITA PROPOPORZIONALE ALL'ERRORE (CORAZZA)
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

MANAUTO_STOP:
		LD	A,(AUMALO)		;TRASMETTO DI FERMARE 
		LD	B,A			;IL MOTORE QUANDO VEDO
		LD	A,(CAMBIO_MANAUTO)	;CHE VI E' STATO UN 
		CP	B			;PASSAGGIO DA MANUALE 
		JR	Z,MANAUTO_FINE		;AD AUTOMATICO E VICEVERSA
		LD	DE,800H			;CORAZZA
		LD	(DACVAL),DE
		CALL	DAC_TRASM
		LD	A,(AUMALO)
		LD	(CAMBIO_MANAUTO),A
MANAUTO_FINE:
		RET
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		CONTROLLO ZONA MORTA
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

CORREZIONI:     

		LD	A,(AUMALO)	;SE SONO IN MANUALE, NON MI INTERESSA, 
		CP	00H		;DISATTIVARE LE USCITE IN BASE ALLA ZONA MORTA
		JR	Z,CORREZIONI_1

		LD      HL,(ERMEDI)     ;SE ZONA MORTA E'
		LD      DE,(ZONA)       ;> DELL'ERRORE
		SBC     HL,DE           ;NON CORREGGO
		JR      NC,CORREZIONI_1
		CCF
		LD      A,(MEMC)        
		RES     B_PC_AVANTI,A             
		RES     B_PC_RITARDO,A             
		LD      (MEMC),A        
		OUT     (PC),A   	
		LD	A,(ENB_DAC_LON)		;SE NON SONO IN DAC 
		CP	02H			;USCITA PROPORZIONALE
		JP	NZ,CORREZIONI_END	;ALL'ERRORE  SALTO (CORAZZA)

		LD	DE,800H		        ;IN ZONA MORTA FERMO IL MOTORE			
		LD	(DACVAL),DE
		CALL	DAC_TRASM		;UGO

		JP      CORREZIONI_END


		;#####################################################################
		;# CALCOLO CORREZIONE MOTORE                                         #
		;# [Ea x C/10 + (Ea - Ep) x D] x G                                   #
		;# [Ea x (C/10 + D) x G] - [Ep x D x G]	                             #
		;# CORRATT = 80000000h + [Ea x (C/10 + D) x G] - [Ep x D x G]        #
		;#####################################################################


CORREZIONI_1:   
		;[Ea x (C/10 + D) x G]
		LD      DE,(CILDIV)	
		LD	HL,(DERIVA)
		ADD	HL,DE		;HL = C/10+D
		LD	(MDO032),HL
		LD	HL,(GUADA)	;HL = G
		LD	(MRE032),HL
		LD	HL,0000H
		LD	(MDO232),HL
		LD	(MRE232),HL
		CALL	MOL32		;PT = (C/10+D)*G
		LD	HL,(PTO032)
		LD	(MDO032),HL
		LD	HL,(PTO232)
		LD	(MDO232),HL
		LD	HL,(ERATTU)	;HL = Ea
		LD	(MRE032),HL	
		CALL	MOL32		;PT = [Ea x (C/10 + D) x G]

		LD      A,(MSCORR_ATT)	
		CP      D_AVANTI        
		JR      Z,CORREZIONI_2	

		;CORRATT = 80000000h - [Ea x (C/10 + D) x G]
		LD	HL,(PTO032)
		LD	(CUBTR0),HL	;SOTTRAENDO = [Ea x (C/10 + D) x G]
		LD	HL,(PTO232)
		LD	(CUBTR2),HL
		LD	HL,0000H	;MINUENDO = 80000000h
		LD	(CINUE0),HL
		LD	HL,8000H
		LD	(CINUE2),HL
		CALL	CSOTT32		;RESTO = MINUENDO - SOTTRAENDO
		LD	HL,(CESTO0)
		LD	(CORRATT),HL	;BASSO
		LD	HL,(CESTO2)
		LD	(CORRATT+02H),HL ;ALTO
		JR	CORREZIONI_3

CORREZIONI_2:
		;CORRATT = 80000000h + [Ea x (C/10 + D) x G]
		LD	HL,(PTO032)
		LD	(ADDEN0),HL	;ADDENDO = [Ea x (C/10 + D) x G]
		LD	HL,(PTO232)
		LD	(ADDEN2),HL
		LD	HL,0000H	;AUGEND0 = 80000000h
		LD	(AUGEN0),HL
		LD	HL,8000H
		LD	(AUGEN2),HL
		CALL	SOMM32		;AUGENDO = ADDENDO + AUGENDO
		LD	HL,(AUGEN0)
		LD	(CORRATT),HL	;BASSO
		LD	HL,(AUGEN2)
		LD	(CORRATT+02H),HL ;ALTO
		JR	CORREZIONI_3
		

CORREZIONI_3:
		;[Ep x D x G]
		LD      HL,(ERPREC)     
		LD      (MOLTI),HL
		LD      A,(DERIVA)
		LD      (MOLPL),A
		CALL    MOLT
		LD      HL,(PROD)      
		LD      (MOLT24),HL       ;RISULTATO
		LD      A,(GUADA)
                LD      (MOLP24),A      
                CALL    MOL24

		LD      A,(MSCORR_PREC)	
		CP      D_AVANTI        
		JR      Z,CORREZIONI_4	

		;CORRATT = CORRATT + [Ep x D x G]
		LD	HL,(CORRATT)
		LD	(ADDEN0),HL	;ADDENDO = CORRATT
		LD	HL,(CORRATT+02H)
		LD	(ADDEN2),HL
		LD	HL,(PROD24)	;AUGEND0 = [Ep x D x G]
		LD	(AUGEN0),HL
		LD	HL,(PROD24+02H)
		LD	(AUGEN2),HL
		CALL	SOMM32		;AUGENDO = ADDENDO + AUGENDO
		LD	HL,(AUGEN0)
		LD	(CORRATT),HL	;BASSO
		LD	HL,(AUGEN2)
		LD	(CORRATT+02H),HL ;ALTO
		JR	CORREZIONI_5

CORREZIONI_4:
		;CORRATT = CORRATT - [Ep x D x G]
		LD	HL,(PROD24)
		LD	(CUBTR0),HL	;SOTTRAENDO = [Ep x D x G]
		LD	HL,(PROD24+02H)
		LD	(CUBTR2),HL
		LD	HL,(CORRATT)	;MINUENDO = CORRATT
		LD	(CINUE0),HL
		LD	HL,(CORRATT+02H)
		LD	(CINUE2),HL
		CALL	CSOTT32		;RESTO = MINUENDO - SOTTRAENDO
		LD	HL,(CESTO0)
		LD	(CORRATT),HL	;BASSO
		LD	HL,(CESTO2)
		LD	(CORRATT+02H),HL ;ALTO

		JR	CORREZIONI_5
CORREZIONI_5:
		LD	A,(CORRATT+03H) ;IF CORRATT > 80000000h THEN MSCORR=D_AVANTI ELSE MSCORR=D_RITARDO
		BIT	7,A
		JR	Z,CORREZIONI_6

		LD      A,D_AVANTI
		LD      (MSCORR),A
		JR	CORREZIONI_7

CORREZIONI_6:
		LD      A,D_RITARDO
		LD      (MSCORR),A
		JR	CORREZIONI_7

CORREZIONI_7:	
		LD	HL,0000H
		LD	(CUBTR0),HL	;SOTTRAENDO = 80000000h
		LD	HL,8000h
		LD	(CUBTR2),HL
		LD	HL,(CORRATT)	;MINUENDO = CORRATT
		LD	(CINUE0),HL
		LD	HL,(CORRATT+02H)
		LD	(CINUE2),HL
		CALL	CSOTT32		;RESTO = MINUENDO - SOTTRAENDO
		LD	HL,(CESTO0)
		LD	(CORRATT),HL	;BASSO
		LD	HL,(CESTO2)
		LD	(CORRATT+02H),HL ;ALTO
		
CORREZIONI_8:		

		LD      A,(CORRATT+03H)
		AND	7FH
		CP	00H
		JR	Z,CORREZIONI_9
                LD      BC,0FFFFH
                LD      A,0FFH
		JR	CORREZIONI_10
CORREZIONI_9:
                LD      BC,(CORRATT)
                LD      A,(CORRATT+02H)
		JR	CORREZIONI_10
CORREZIONI_10:

                LD      (MDECOR),A      ;VALORE PER 
                CP      00H             ;EXTRA CORREZ.
                JR      NZ,CORREZIONI_11

                LD      A,B

                LD      (CORRE),A
                JR      CORREZIONI_12          
CORREZIONI_11:  LD      A,0FFH
                LD      (CORRE),A



		;ROUTINE DI CORREZIONE


CORREZIONI_12:  LD      A,(CIDE75)      ;DECREMENTO 
                CP      00H             ;DEL 75% DEL
                JR      Z,CORREZIONI_13        ;CICLO
                DEC     A
                LD      (CIDE75),A


CORREZIONI_13:       
		LD      A,(PROPRI)		;SE IN PROTEZIONE 
                CP      01H			;(ALLARME) ATTIVO
                JP      Z,CORREZIONI_END        ;ESCO 
		LD      A,(PROVEL)		;SE IN PROTEZIONE 
                CP      01H			;(ALLARME) ATTIVO
                JP      Z,CORREZIONI_END        ;ESCO 

		LD      A,(MATTES)		;CONTROLLO CICLO
		DEC     A			;DI ATTESA
		LD      (MATTES),A
		CP      00H
		JP      NZ,CORREZIONI_END

                LD      A,(CICL75)		;RICARICO IL 
                LD      (CIDE75),A		;75% DEL CICLO 

                LD      A,(CICLO)		;RICARICO IL CI-
		LD      (MATTES),A		;CLO DI ATTESA.

                LD      HL,(ERMEDI)
		LD      DE,(ZONA)
		SBC     HL,DE			;SE ZONA MORTA
		JR      NC,CORREZIONI_14		;MAGGIORE DI
		CCF				;ERMEDI SALTO
		JP      CORREZIONI_END
CORREZIONI_14:         
		LD	A,(AUMALO)		;SE SONO IN 
		CP	00H			;MANUALE SALTO
		JP      Z,CORREZIONI_END

                LD      A,(CORRE)
                CP      00H			;SALTO
                JP      Z,KRAPIN        

		LD	A,(ENB_DAC_LON)		;CONTROLLO SE SONO
		CP	02H			;IN USCITA PROPORZIONALE
		JR	NZ,DAC_TENS_PROP_01	;ALL'ERRORE (CORAZZA)
		LD      HL,(DACDELTACOR)	;MOLTIPLICO IL DAC GUADAGNO
		LD      (MOLTI),HL		;LONGITUD. PER L'ERRORE
		LD      A,(CORRE)		;E OTTENGO UNA USCITA 
		LD      (MOLPL),A		;PROPORZIONALE
		CALL    MOLT			;(CORAZZA)
		LD      HL,(PROD)      
		LD	(CORPROPTEN),HL

DAC_TENS_PROP_01:
                LD      A,(MDECOR)
                LD      (DECORR),A

		LD	A,(CICLO)		;SE SONO IN DAC PROPORZIONALE
		CP	01			;E SONO IN CILCO 1 DO LA 
		JR	NZ,DAC_TENS_PROP_02	;CORREZIONE CONTINUA 

		LD	A,(ENB_DAC_LON)		;SE NON SONO IN DAC 
		CP	02H			;USCITA PROPORZIONALE
		JR	Z,DAC_TENS_PROP_03	;ALL'ERRORE  SALTO (CORAZZA)
DAC_TENS_PROP_02:
                LD      A,37H			;CONTROLLO CTC1   
		OUT     (CTC1_CMD),A         
                LD      A,40H			;COSTANTE DI TEMPO
		OUT     (CTC1_CMD),A			
		LD      A,0D7H			;CONTROLLO CTC2
		OUT     (CTC2_CMD),A
                LD      A,(CORRE)		;MSB ERRORE  
                OUT     (CTC2_CMD),A

DAC_TENS_PROP_03:
		LD      A,(MSCORR)		;VEDO IN CHE
		CP      D_AVANTI		;SENSO CORREG.
		JR      NZ,AUTRIT
;%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
                LD      A,(TIRCIC)		;SE INTERVALLO TIRO E' A ZERO SALTA
                CP      00H			
                JR      Z,AUTAVA

                LD	A,(AUMATI)		;SE TIRO E' IN MANUALE SALTA 
                CP	00H			
                JR      Z,AUTAVA

		LD	BC,(TIRCIR_ATT)
		LD      A,(DECREM)
		INC	A
		CP	C
		JR	C,CORREZIONI_15 
		LD      A,(TIRCIR_ATT)
CORREZIONI_15:
		LD      (DECREM),A

		LD      A,(INCREM)
		DEC     A
		LD      (INCREM),A
		CP      00H
		JR      NZ,AUTAVA
                LD      A,(TIRCIR_ATT)
		LD      (INCREM),A
                
                LD      A,01H           
                LD      (TMEM6),A		;PIU' CARTA
                LD      (TMEM4),A		;ATTIVO 
                CALL    CORREZIONE_TIRO         ;CORREZ.TIRO
                JP      CORREZIONI_END
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

AUTAVA:         LD      A,(MEMC)        ;CORREZIONE IN
		RES     B_PC_RITARDO,A  ;AVANTI
		SET     B_PC_AVANTI,A
		LD      (MEMC),A
		OUT     (PC),A

		LD	A,(ENB_DAC_LON)		;SE SONO IN DAC
		CP	02H			;USCITA PROPORZIONALE
		JR	Z,DAC_TENS_PROP_04	;SALTO (CORAZZA)
		
		;INCREMENTO TEMPORANEAMENTE IL DAC
		LD	HL,(DACDELTACOR)
		LD	(DAC_INCREM),HL
		CALL	DAC_INCR_DECR
		JR      CORREZIONI_END
DAC_TENS_PROP_04:
		LD	HL,(CORPROPTEN)		;CARICO L'ERRORE DEL DAC
		LD	(DAC_INCREM),HL		;PROPORZ.PER MANDARLO
		CALL	DAC_INCR_DECR		;ALLA SUB-RUTINE DI 
		JR      CORREZIONI_END		;ELABORAZIONE DEL DAC (CORAZZA)

AUTRIT:
                LD      A,(TIRCIC)      ;SE A ZERO IL CICLO   
                CP      00H             ;DEL TIRO  SALTA
                JR      Z,AUTRI1

                LD	A,(AUMATI)	;SE IN MANUALE IL
                CP	00H		;TIRO SALTA 
                JR      Z,AUTRI1

		LD	BC,(TIRCIR_ATT)
		LD      A,(INCREM)
		INC	A
		CP	C
		JR	C,CORREZIONI_16 
		LD      A,(TIRCIR_ATT)
CORREZIONI_16:
		LD      (INCREM),A

		LD      A,(DECREM)
		DEC     A
		LD      (DECREM),A
		CP      00H
		JR      NZ,AUTRI1
                LD      A,(TIRCIR_ATT)      
		LD      (DECREM),A
                LD      A,02H           ;MENO CARTA
                LD      (TMEM6),A
                LD      A,01H           ;ATTIVO
                LD      (TMEM4),A       ;CORREZ.TIRO 
                CALL    CORREZIONE_TIRO
                JR      CORREZIONI_END


AUTRI1:         LD      A,(MEMC)        ;CORREZIONE IN
		RES     B_PC_AVANTI,A   ;RITARDO
		SET     B_PC_RITARDO,A
		LD      (MEMC),A
		OUT     (PC),A

		LD	A,(ENB_DAC_LON)		;SE SONO IN DAC 
		CP	02H			;USCITA PROPORZIONALE
		JR	Z,DAC_TENS_PROP_05	;SALTO(CORAZZA)

		;DECREMENTO TEMPORANEAMENTE IL DAC
		LD	HL,(DACDELTACOR)
		LD	(DAC_DECREM),HL
		CALL	DAC_INCR_DECR
		JR      CORREZIONI_END
DAC_TENS_PROP_05:
		LD	HL,(CORPROPTEN)		;VEDI, DAC_TENS_PROP_04:
		LD	(DAC_DECREM),HL
		CALL	DAC_INCR_DECR
		
CORREZIONI_END:      

		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		RESET USCITE DI CORREZIONE INDESIDERATE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

KRAPIN:
		LD	A,(AUMALO)	;SE E' IN MANUALE NON 
		CP	00H		;RESETTARE LE USCITE DI COMANDO
		JR	Z,KRAPIN1

		CALL	RESEPC		;RESET USCITE DI CORREZIONE INDESIDERATE

KRAPIN1:			
                LD      A,43H           
                OUT     (CTC1_CMD),A         
                OUT     (CTC2_CMD),A
                                     
		LD      A,(TIRCIR_ATT)      
                LD      (INCREM),A
                LD      (DECREM),A
		RET



                ;##################################
                ;# CALCOLO CORREZIONE MOTORE TIRO #
                ;# Et x Gt = TEMPO DI CORREZIONE  #   
                ;##################################
CORREZIONE_TIRO:		
		LD      A,(TIRGUA)		;SE ZERO 
                CP      00H			;SALTO
                JP      Z,CORREZIONE_TIRO_FINE        

                LD      DE,(ERATTU)     
                LD      A,(TIRGUA)       
                LD      (MOLT24),DE     
                LD      (MOLP24),A      
                CALL    MOL24           
                LD      BC,(PROD24)
                LD      A,(PROD24+02H)
                CP      00H
                JR      Z,CORREZIONE_TIRO_1     ;BC = ERRORE    
                LD      B,0FFH			;EXTRA CORR.

CORREZIONE_TIRO_1:         
		LD      HL,0B00H		;SE SUPERA
                SBC     HL,BC			;QUESTO VALORE
                JR      NC,CORREZIONE_TIRO_2    ;IMPONGO UN
                CCF				;VALORE FISSO
                LD      BC,0B00H		;PER NON FAR
CORREZIONE_TIRO_2:         
		LD      (TMEM5),BC		;MUOVERE TANTO
                LD      A,B			;IL MOTOPOTENZIOMETRO
                OR      C
                JP      Z,CORREZIONE_TIRO_RESET        



                ;ROUTINE DI CORREZIONE TIRO

		LD	A,(AUMATI)		;SE IN MANUALE
                CP	00H			;TIRO SALTA 
                JP      Z,CORREZIONE_TIRO_FINE

                LD      A,(TMEM4)      
		CP      00H
                JP      Z,CORREZIONE_TIRO_FINE        

                LD      A,(TMEM6)       
                CP      00H
                JP      Z,CORREZIONE_TIRO_FINE
                CP      01H
                JP      Z,CORREZIONE_TIRO_DEC        
                CP      02H
                JP      Z,CORREZIONE_TIRO_INC        
                JP      CORREZIONE_TIRO_FINE

CORREZIONE_TIRO_DEC:                  
                LD      A,(TIRGUA)		;SE GUATRA >  DI 100 LA
                CP      65H			;CORREZIONE
                JR      C,CORREZIONE_TIRO_DEC_1 
                SBC     A,64H			;DIVENTA FISSA
                LD      BC,0000H		;UNA UNITA'
                LD      (TMEM5),BC		;DELLA SOTTRAZIONE
                LD      (TMEM5),A		;E' UGUALE A 1mS
                LD      A,0B7H                
                OUT     (73H),A         
                LD      A,10H           
                OUT     (73H),A          
                JR      CORREZIONE_TIRO_DEC_2
CORREZIONE_TIRO_DEC_1:         
		CCF                     
                LD      A,0B7H			;CON ERORE 0.1mmm      
                OUT     (73H),A			;E TIMER = 10
                LD      A,02H			;TEMPO DI  ZZZ
                OUT     (73H),A			;CORREZ. = 30mS  
CORREZIONE_TIRO_DEC_2:         

		LD      A,(MEMC)		;DIMINUZIONE
                RES     B_PC_SINISTRA,A		;TIRO
		SET     B_PC_DESTRA,A
		LD      (MEMC),A
		OUT     (PC),A

		;DECREMENTA BASE DAC
		LD	HL,(DACDELTATIR)
		LD	(DAC_INCREM_BASE),HL
		CALL	DAC_INCR_DECR_BASE

                JR      CORREZIONE_TIRO_FINE  



CORREZIONE_TIRO_INC:                   
                LD      A,(TIRGUA)		;VEDI SOPRA 
                CP      65H
                JR      C,CORREZIONE_TIRO_INC_1
                SBC     A,64H
                LD      BC,0000H
                LD      (TMEM5),BC
                LD      (TMEM5),A
                LD      A,0B7H                
                OUT     (73H),A         
                LD      A,10H           
                OUT     (73H),A          
                JR      CORREZIONE_TIRO_INC_2
CORREZIONE_TIRO_INC_1:         
		CCF
                LD      A,0B7H			;CON ERRORE 0.1mmm      
                OUT     (73H),A			;E TIMER = 10
                LD      A,02H			;TEMPO DI  
                OUT     (73H),A			;CORREZ. = 30mS 

CORREZIONE_TIRO_INC_2:        
		LD      A,(MEMC)		;AUMENTO
                RES     B_PC_DESTRA,A           ;TIRO
		SET     B_PC_SINISTRA,A
		LD      (MEMC),A
		OUT     (PC),A

		;INCREMENTA BASE DAC
		LD	HL,(DACDELTATIR)
		LD	(DAC_DECREM_BASE),HL
		CALL	DAC_INCR_DECR_BASE


		JR	CORREZIONE_TIRO_FINE

CORREZIONE_TIRO_FINE:         
		LD      A,00H           
                LD      (TMEM6),A
                
                LD      A,(TIRCIC)      ;RIPRISTINO
                LD      (TIRCIR_ATT),A      ;I VALORI 
                LD      (INCREM),A      ;NORMALI
                LD      (DECREM),A
                RET
		      
CORREZIONE_TIRO_RESET:         
		LD      A,(MEMC)        ;QUANDO L'ERRORE 
                RES     B_PC_DESTRA,A   ;E' A ZERO
                RES     B_PC_SINISTRA,A ;SI ANNULLA 
                LD      (MEMC),A        ;TUTTO PER
                OUT     (PC),A          ;EVITARE CHE
                LD      A,43H           ;CHE AVVENGANO
                OUT     (73H),A         ;CORREZIONI
                LD      A,00H           ;INDESIDERATE
                LD      (TMEM4),A       ;COME A KRAPINA
                RET


