;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		DAC:		INCREMENTO E DECREMENTO VALORE ATTUALE DAC
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
DAC_INCR_DECR:


		;SE LONGITUDINALE O LATERALE TIRO DISABILITATO, SALTO
		LD	A,(ENB_DAC_LON)
		CP	00H
		JR	Z,DAC_INCR_DECR_01
		CP	02H			;TENSIONE PROPORZIONALE
		JR	Z,DAC_INCR_DECR_01	;ALL'ERRORE (CORAZZA)

		LD	A,(ENB_DAC_TRA)
		CP	00H
		JR	Z,DAC_INCR_DECR_01

		JR	DAC_INCR_DECR_FINE

DAC_INCR_DECR_01:
		
		;SE REV_CORRECTION INVERTO I VALORI
		LD	A,(REV_CORRECTION)
		CP	00H
		JP	NZ,DAC_INCR_DECR_02

		;INVERTO I VALORI DI CORREZIONE
		LD	HL,(DAC_INCREM)
		LD	DE,(DAC_DECREM)
		LD	(DAC_INCREM),DE
		LD	(DAC_DECREM),HL
		
DAC_INCR_DECR_02:
		;INCREMENTO TEMPORANEAMENTE IL VALORE DEL DAC
		LD	HL,(DACBASE)
		LD	DE,(DAC_INCREM)
		ADD	HL,DE
		LD	(DACVAL),HL

		;DECREMENTO TEMPORANEAMENTE IL VALORE DEL DAC ????????H

		;CONTROLLO SE DACVAL-DAC_DECREM < 0    -->   DACVAL = 0
		LD	HL,(DACVAL)
		LD	(COMP16A),HL
		LD	HL,(DAC_DECREM)
		LD	(COMP16B),HL
		CALL	COMPARE16
		LD	A,(COMP16A)
		CP	02H			;DACVAL < DAC_DECREM
		JR	Z,DAC_INCR_DECR_03
		JR	DAC_INCR_DECR_04

DAC_INCR_DECR_03:	;DACVAL-DAC_DECREM < 0    -->   DACVAL = 0
		LD	HL,0000H
		JR	DAC_INCR_DECR_05

DAC_INCR_DECR_04:	;DACVAL-DAC_DECREM >= 0    -->   DACVAL = DACVAL-DAC_DECREM
		LD	HL,(DACVAL)
		LD	DE,(DAC_DECREM)
		AND     A               ;RESET CARRY
		SBC	HL,DE
		AND     A               ;RESET CARRY
		JR	DAC_INCR_DECR_05

DAC_INCR_DECR_05:
		LD	(DACVAL),HL
		CALL	DAC_TRASM

		;RESET VALORI TEMPORANEI
		LD	HL,0000H
		LD	(DAC_INCREM),HL
		LD	(DAC_DECREM),HL

DAC_INCR_DECR_FINE:		
		RET



;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		DAC:		INCREMENTO E DECREMENTO VALORE BASE DAC
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
DAC_INCR_DECR_BASE:
		;SE TIRO DAC DISABILITATO, SALTO
		LD	A,(ENB_DAC_TIR)
		CP	00H
		JP	NZ,DAC_INCR_DECR_BASE_FINE


		;SE REV_CORRECTION INVERTO I VALORI
		LD	A,(REV_CORRECTION)
		CP	00H
		JP	NZ,DAC_INCR_DECR_BASE_01

		;INVERTO I VALORI DI CORREZIONE
		LD	HL,(DAC_INCREM_BASE)
		LD	DE,(DAC_DECREM_BASE)
		LD	(DAC_INCREM_BASE),DE
		LD	(DAC_DECREM_BASE),HL

DAC_INCR_DECR_BASE_01:

		;INCREMENTO TEMPORANEAMENTE IL VALORE DEL DAC
		LD	HL,(DACBASE)

		LD	DE,(DAC_INCREM_BASE)
		ADD	HL,DE
		LD	(DACBASE),HL


		LD	HL,(DACBASE)
		LD	(COMP16A),HL
		LD	HL,1000H
		LD	(COMP16B),HL
		CALL	COMPARE16
		LD	A,(COMP16A)

		CP	02H			;DACBASE < 1000
		JR	Z,DAC_INCR_DECR_BASE_02

		LD	HL,1000H
		LD	(DACBASE),HL
		
DAC_INCR_DECR_BASE_02:

		;DECREMENTO TEMPORANEAMENTE IL VALORE DEL DAC

		;CONTROLLO SE DACBASE-DAC_DECREM < 0    -->   DACBASE = 0
		LD	HL,(DACBASE)
		LD	(COMP16A),HL
		LD	HL,(DAC_DECREM_BASE)
		LD	(COMP16B),HL
		CALL	COMPARE16
		LD	A,(COMP16A)
		CP	02H			;DACBASE < DAC_DECREM
		JR	Z,DAC_INCR_DECR_BASE_03
		JR	DAC_INCR_DECR_BASE_04

DAC_INCR_DECR_BASE_03:	;DACBASE-DAC_DECREM < 0    -->   DACBASE = 0
		LD	HL,0000H
		JR	DAC_INCR_DECR_BASE_05

DAC_INCR_DECR_BASE_04:	;DACBASE-DAC_DECREM >= 0    -->   DACBASE = DACBASE-DAC_DECREM
		LD	HL,(DACBASE)
		LD	DE,(DAC_DECREM_BASE)
		AND     A               ;RESET CARRY
		SBC	HL,DE
		AND     A               ;RESET CARRY
		JR	DAC_INCR_DECR_BASE_05

DAC_INCR_DECR_BASE_05:
		LD	(DACBASE),HL
		LD	(DACVAL),HL
		CALL	DAC_TRASM

		CALL	CONVERT_DAC_BASE_1000
		CALL	SEND_DAC_BASE

		;RESET VALORI TEMPORANEI
		LD	HL,0000H
		LD	(DAC_INCREM_BASE),HL
		LD	(DAC_DECREM_BASE),HL

DAC_INCR_DECR_BASE_FINE:		
		RET







;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		DAC:		CONVERTO DACBASE1000 (0-1000) IN DACBASE (0-4096)
;				;DACBASE = DACOFFSET+(DACBASE1000*4)
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
CONVERT_DAC_BASE:
		LD	DE,(DACBASE1000)	;AGGIORNO IL VALORE CORRENTE E AGGIORNO DAC
		LD	(MOLTI),DE		
		LD	DE,04H
		LD	(MOLPL),DE
		CALL	MOLT
		LD	DE,(PROD)
		LD	HL,(DACOFFSET)
		ADD	HL,DE
		LD	(DACBASE),HL
CONVERT_DAC_BASE_FINE:		
		RET



;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		DAC:		CONVERTO  DACBASE (0-4096) IN DACBASE1000 (0-1000) 
;				;DACBASE1000 = (DACBASE - DACOFFSET)/4 
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
CONVERT_DAC_BASE_1000:
		AND     A               ;RESET CARRY

		;DACBASE1000 = (DACBASE - DACOFFSET)/4
		LD	HL,(DACBASE)
		LD	DE,(DACOFFSET)
		SBC	HL,DE
		JR      NC,CONVERT_DAC_BASE_1000_01
		
		CCF
		LD	HL,0000H
		LD	(DACBASE1000),HL
		JR	CONVERT_DAC_BASE_1000_FINE

CONVERT_DAC_BASE_1000_01:
		LD	(DACBASE1000),HL
		
		;DIVIDO PER 4
		AND     A               ;RESET CARRY
		SRL     L
		SRL     H
		JR      NC,CONVERT_DAC_BASE_1000_02

		CCF
		SET     7,L

CONVERT_DAC_BASE_1000_02:
		SRL     L
		SRL     H
		JR      NC,CONVERT_DAC_BASE_1000_03

		CCF
		SET     7,L
CONVERT_DAC_BASE_1000_03:

		LD	(DACBASE1000),HL
CONVERT_DAC_BASE_1000_FINE:		
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		DAC:	TRASMISSIONE NUOVO VALORE 
;			VERSO CONVERTITORE 12 BIT
;			
;		DAC_CLK		DA3	/PD3
;		DAC_LOAD	DA4	/PD4
;		DAC_SRI		DA5	/PD5
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

DAC_TRASM:
		PUSH    BC
		PUSH	DE
		PUSH    HL

		LD      A,00H           ;AZZERO IL CARRY
                RLA

		LD      DE,(DACVAL)	;CARICO IL VALORE IN DE
		LD	HL,(MAXDAC)	;CONTROLLO CHE SIA INFERIORE
                SBC     HL,DE		;AL MASSIMO AMMISSIBILE (4096)
		JR      NC,DAC_TRASM1	

		LD	HL,(MAXDAC)	;SE SUPERIORE IMPONGO IL MASSIMO
		LD	(DACVAL),HL
		LD	DE,(MAXDAC)
	
		;TRASMETTO I PRIMI 4 BIT DEL BYTE PIU' SIGNIFICATIVO
DAC_TRASM1:
		LD      A,00H           ;AZZERO IL CARRY
                RLA	

                LD      C,D             ;D CONTIENE MSB DA TRASMETTERE
                RL      C		;SHIFTO DI 4 BIT (DAC A 12 BIT)
                RL      C
                RL      C
                RL      C

                LD      B,04H           ;CONTATORE DI CICLO
DAC_TRASM2:     
		LD      A,(MEMD)        
                SET     3,A		;CLOCK BASSO
                LD      (MEMD),A
                OUT     (PD),A

                RL      C		;SHIFTO DI UN BIT

		CALL	DAC_TRASM_BIT

		LD      A,(MEMD)
                RES     3,A             ;CLOCK ALTO
		LD      (MEMD),A
                OUT     (PD),A

		LD      A,(MEMD)        
                SET     3,A		;CLOCK BASSO
                LD      (MEMD),A
                OUT     (PD),A

                DJNZ    DAC_TRASM2


		;TRASMETTO IL BYTE MENO SIGNIFICATIVO
		LD      H,08H
                LD      B,08H           ;E CONTIENE LSB DA TRASMETTERE
                LD      C,E
DAC_TRASM3:     LD      A,(MEMD)
	
		RL      C		;SHIFTO DI UN BIT
		CALL	DAC_TRASM_BIT
		
		DEC     H
                JR      NZ,DAC_TRASM4

		LD      A,(MEMD) 
                SET     4,A             ;LOAD BASSO
DAC_TRASM4:	RES     3,A             ;CLOCK ALTO
		LD      (MEMD),A
                OUT     (PD),A

		LD      A,(MEMD) 
                SET     3,A             ;CLOCK BASSO
		LD      (MEMD),A
                OUT     (PD),A

                DJNZ    DAC_TRASM3

                LD      A,(MEMD)        
                RES     4,A             ;LOAD ALTO
                LD      (MEMD),A
                OUT     (PD),A

                POP     HL
		POP	DE
                POP     BC
		
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		DAC:		TRASMETTO BIT DATO IN BASE 
;				AL VALORE DI CARRY
;
;		DAC_CLK		DA3	
;		DAC_LOAD	DA4	
;		DAC_SRI		DA5	
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
DAC_TRASM_BIT:
                JR      NC,DAC_TRASM_BIT_1 
		LD      A,(MEMD)
                SET     5,A
                JR      DAC_TRASM_BIT_FINE
DAC_TRASM_BIT_1:	
		LD      A,(MEMD)
 		RES	5,A             
DAC_TRASM_BIT_FINE:  
		LD      (MEMD),A
                OUT     (PD),A
		
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ST7:	TRASMISSIONE RICEZIONE 2 BYTE 
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
TRASM:
                LD      B,02H           
TRAS1:          LD      A,(IX)          
		CALL    TX_RX
		LD	A,D
		LD	(IY),A
		INC     IX
		INC	IY 
		DJNZ    TRAS1
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ST7:	TRASSMISSIONE RICEZIONE 1 BYTE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

TX_RX:     
		PUSH    BC              ;TRASMISSIONE
		LD      B,08H           ;RICEZIONE SE-
                LD      C,A             ;RIALE PARALLELO
TX_RX1:         
		LD      A,(MEMB)	;IMPOSTO IL BIT DA MANDARE
                RL      C
                JR      NC,TX_RX2
                SET     7,A
                JR      TX_RX3
TX_RX2:         RES     7,A
TX_RX3:            
		LD      (MEMB),A	;MANDO IL BIT IN TX
                OUT     (PB),A
		LD      A,(MEMB)	;IMPOSTO CLOCK = 1
                SET     0,A
		LD      (MEMB),A	
                OUT     (PB),A
		CALL	SLEEP		;RITARDO
		IN	A,(PA)		;LEGGO IL BIT IN RX	
		RR	A		;SHIFTO PER AVER IL BYTE IN D
		RL	D
		LD      A,(MEMB)	;IMPOSTO CLOCK = 0
                RES     0,A
                OUT     (PB),A
                LD      (MEMB),A
		CALL	SLEEP		;RITARDO
                DJNZ    TX_RX1
                POP     BC

                RET



;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SLEEP FOR 1 SECOND
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
SLEEP_1_SEC:
		PUSH	AF
		PUSH	BC
		PUSH	DE

		;LD	E,1AH
		LD	E,10H
SLEEP_1_SEC_1:	LD	B,0FFH
SLEEP_1_SEC_2:	LD	D,0FFH
SLEEP_1_SEC_3:	DEC	D
		JP	NZ,SLEEP_1_SEC_3
		DEC	B
		JP	NZ,SLEEP_1_SEC_2
		DEC	E
		JP	NZ,SLEEP_1_SEC_1
	
		POP	DE
		POP	BC
		POP	AF

		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SLEEP
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
SLEEP:
		PUSH	HL
                LD      L,4AH
SLEEP1:		DEC     L
                JR      NZ,SLEEP1
		POP	HL
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SLEEP_FAST
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
SLEEP_FAST:
