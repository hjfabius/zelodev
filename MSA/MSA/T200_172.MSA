		LD	A,(MEMLED)	;SE E' UGUALE
		LD	B,A		;ALLA PRECEDENTE
		LD	A,(MEMC)	;SALTO 
		AND	0EBH		;0C3H
		CP	B
		JR	Z,SEND_LED_FINE
		LD	E,A

		CALL	REQISFREE
		LD	A,(LEGGI)	;CORREZIONE 
		LD	(ARR_TRASM+00H),A  ;AVANTI
		LD	A,(STATLED)
		LD	(ARR_TRASM+01H),A
		LD	D,00H
		LD	HL,ARR_TRASM+02H
		LD	(HL),D
		INC	HL
		LD	A,(MEMC)	;STATO CORREZIONE
		AND	0EBH		;0C3H
		LD	(HL),A
		CALL	REQUEST

		LD	A,(MEMC)	;STATO CORREZIONE
		LD	(MEMLED),A

		EXX
