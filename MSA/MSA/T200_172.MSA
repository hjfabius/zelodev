;			PICCO DI TEST SUL BIT PC 5
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
  
OUTEST:
		LD	A,(MEMC)
		SET	5,A
		OUT	(PC),A
		LD	D,0FFH
CAZ:		DEC	D
		JR	NZ,CAZ
		RES	5,A
		LD	(MEMC),A
		OUT	(PC),A
		RET


