CTC3:           PUSH    BC
		PUSH    DE
		PUSH    HL
		PUSH    AF
		PUSH    IX
                PUSH    IY

		LD	BC,0AFFH	;CARICO VALORE PER 
		LD	(WATCH_LOLA),BC ;CONTROLLO BLOCCO INTRRUPT

                LD      A,(ARR_RICAUTO+06H)	;SE NON SONO IN  
		CP      00H			;F4 SALTO
                JR      Z,CTC32			;

                LD      A,(ARR_RICAUTO+0AH)	;PRIMA DI 
                INC     A			;SCRIVERE 
                LD      (ARR_RICAUTO+0AH),A	;DOPPIO ASPET-
                CP      04H			;4 RIPETIZIONI
                JR      Z,CTC31
                LD      A,02H
                LD      (ARR_RICAUTO+06H),A
                JP      CTC33		

CTC31:
		CALL	DOPPIO

                LD      A,00H
                ;LD      (ARR_RICAUTO+04H),A
                LD      (ARR_RICAUTO+06H),A
                LD      (ARR_RICAUTO+0AH),A

                LD      A,43H
                OUT     (73H),A
                JR      CTC33


CTC32:          LD      A,(TMEM4)       ;SE ATTIVATA
		CP      01H             ;CORREZIONE
                JP      NZ,CTC33        ;SALTA
	        LD      BC,(TMEM5)      ;CONTIENE IL
                DEC     BC              ;VALORE 
                LD      (TMEM5),BC      ;DELL'ERRORE
                LD      A,B
                OR      C
                JR      NZ,CTC33        
