		IN      A,(PA)		;SE BIT DI RICHIESTA DI ABILITAZIONE E' 1
                BIT     7,A		;SIGNIFICA CHE PER QUALCHE MOTIVO GLI IRQ SONO DISABILITATI
                JR      Z,CHK_IRQ_ENABLED_FINE
		EI 			;ABILITO INTERRUPT
CHK_IRQ_ENABLED_FINE:
		RET
				


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ROUTINE DI CONTROLLO SOGLIA INSERZIONE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

CHKSOGLIN:
	        CALL    VELO
                LD      HL,(VELIST)  
		LD      DE,(INSER)      
		SBC     HL,DE            
		JR      C,SOGLIN_ERR

SOGLIN_OK:      CALL	SPEEDOK
		JR	CHKSOGLIN_FINE

SOGLIN_ERR:         
		CCF        
		LD      A,(DELAY_ALLARM);BLOCCO ALLARME
		LD      (CONALL),A	;CONTEGGIO AVVISI ALLARME CIRC
		LD      A,07H           ;SE INSER E' MAGGIORE BLOCCO LA CORREZIONE 
		LD      (MATTES),A      ;E AUMENTO I CICLI DI ATTESA.
		
		CALL    SPEED_LOW 
		JR      CHKSOGLIN_FINE

CHKSOGLIN_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ROUTINE DI CONTROLLO SOGLIA ALLARME 
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

CHKALARM:       
		IN      A,(PB)          
                BIT     3,A             ;SE MANCA IL SEGNO
                JR      NZ,ALLA1        ;SALTO

                LD      DE,(DMEZGA)     ;40% GATE IN CENTESIMI
                LD      HL,(ERMEDI)     ;QUANDO L'ERRORE
                SBC     HL,DE           ;E' MINORE 
                JR      NC,ALLA1        ;DEL 40% DEL
                CCF                     ;GATE E SONO

		CALL	F9_OFF		;DISATTIVO F9

ALLA1:          
		LD	A,(AUMALO)	;SE SONO IN MANUALE
		CP	00H		;DISATTIVO ALLARME
		JR      Z,NOALL
	
		LD	A,(PROVEL)	;SE BASSA VELOCITA 
		CP	01H		;DISATTIVO ALLARME
		JR	Z,NOALL

		LD      A,(ALLAR)       ;SE SOGLIA ALLARME (P2) = 0
		CP      00H             ;SALTA.
		JR      Z,NOALL  

		LD	A,(PROPRI)	;SE NO PRINT
		CP	01H		;ATTIVO ALLARME
		JR	Z,SIALL

		LD      HL,(ALLAR)      ;SE ERRORE > SOGLIA ALLARME (P2)
		LD      DE,(ERMEDI)	;CONTO 5 AVVISI E POI ATTIVO ALLARME
		SBC     HL,DE         
		JR      NC,NOALL   
		
		CCF
		LD      A,(CONALL)      ;SE HO CONTATO 5 CICLI DI AVVISO
		CP      00H             ;ATTIVO L'ALLARME
		JR      Z,SIALL    
		DEC     A
		LD      (CONALL),A
		JR      ALLA_FINE

SIALL:          
		CALL	ALARM_ON	;ATTIVO ALLARME
		JR	ALLA_FINE

NOALL:          
		CALL	ALARM_OFF	;DISATTIVO ALLARME
		LD      A,(DELAY_ALLARM);E CARICO 5 CICLI PRIMA 
		LD      (CONALL),A      ;DI DARE L'ALLARME
		JR	ALLA_FINE
ALLA_FINE:
		RET



;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		TRASMISSIONE A COINCIDENZA DEL VALORE DI FASE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

FASE_COINCIDENZA:         

		LD      HL,(FASE)
		LD	(COMP16A),HL
		LD      HL,1000H	
		LD	(COMP16B),HL
		CALL	COMPARE16
		LD	A,(COMP16A)
		CP	02H		;FASE<4096 ?
		JP	Z,FASE_COINCIDENZA_INVIO 
		
		LD	HL,0000H	;METTO DI DEFAULT A 0
		LD      (FASE),HL


FASE_COINCIDENZA_INVIO:
		LD      HL,(FASE)
		LD      A,H
		OUT     (20H),A
		LD      A,L
		OUT     (10H),A
FASE_COINCIDENZA_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ROUTINE DI FASATURA AUTOMATICA LONGITUDINALE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

FASE_AUTO_LONG: 
		LD      A,(ARR_RICAUTO+00H)	;SE RICERCA E' GIA' IN CORSO, ESCO
		CP      01H
                JP      NZ,FASE_AUTO_LONG_FINE

		CALL	FASE_AUTO_INIZIA
		CALL    CODICE
		CALL	FASE_TROVATA		;SE ARRIVA QUI LA FASE E' STATA TROVATA
						;ALTRIMENTI CTC1 CHIAMA FASE_FALLITA E RIPARTE DA MAIN
FASE_AUTO_LONG_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ROUTINE DI INIZIO FASATURA AUTOMATICA
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
FASE_AUTO_INIZIA:

		LD	BC,(FASE)		;BACKUP VALORI FASE PRECEDENTE
		LD	(MFASE),BC
		LD	BC,(FASES1)
		LD	(MFASES1),BC
		LD	BC,(FASRIF)
		LD	(MFASRIF),BC


		LD       A,00H			;IMPONGO MANUALE
		LD	(AUMALO),A	
		LD	(AUMATI),A	
		LD	(AUMATR),A	

		LD       A,00H			;RESET USCITE
                LD      (MEMC),A		
                OUT     (PC),A

		LD	A,00H
                LD      (SUPCOR),A		;ANNULLO VALORE DI ERRORE MAGGIORE DI MEZZO GATE


		LD      A,60H			;INIZIO CON GUADAGNO MINIMO
		LD      (GUADS1),A

		CALL	CAL_CODICE		;CALCOLO VALORI DI CODICE_BIANCO E CODICE_NERO

		LD      A,(MEMB)
		SET     6,A			;BLOCCO GATE
		LD      (MEMB),A
		OUT     (PB),A

		LD      A,0D7H			;IMPOSTO CTC1 COME CONTATORE DI CICLI
                OUT     (CTC1_CMD),A		
		LD      A,03H			;INTERRUPT OGNI 3 GIRI
		OUT     (CTC1_CMD),A

                LD      A,01H
		LD      (ARR_RICAUTO+06H),A
                LD	A,04H			;SE DOPO CIRCA 12 GIRI RICERCA FALLITA ESCI 
		LD      (ARR_RICAUTO+02H),A

FASE_AUTO_INIZIA_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUBROUTINE DI FASATURA AUTOMATICA ESEGUITA CORRETTAMENTE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

FASE_TROVATA:
		;MEMORIZZO LA NUOVA FASE
		LD	BC,(CODICE_ENC_B1)	
		LD      (FASE),BC  

		CALL    CENTRA  

		LD      A,(MEMC)		;TOLGO EVENTUALE ALLARME
		RES     B_PC_PROTEZIONE,A
		LD      (MEMC),A        
                OUT     (PC),A          
		
		CALL	FORCE_STATUS
		CALL	SEND_OK

		CALL	FASE_AUTO_TERMINA

FASE_TROVATA_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUBROUTINE DI FASATURA AUTOMATICA FALLITA
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
FASE_FALLITA:
		CALL	FORCE_STATUS
		LD	DE,(S_FASATURA_FALLITA)
		CALL	SET_STATUS		;INVIO MESSAGGIO FASE FALLITA

		LD	BC,(MFASE)		;BACKUP VALORI FASE PRECEDENTE
		LD	(FASE),BC
		LD	BC,(MFASES1)
		LD	(FASES1),BC
		LD	BC,(MFASRIF)
		LD	(FASRIF),BC

		CALL	FASE_AUTO_TERMINA
FASE_FALLITA_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		ROUTINE DI TERMINE FASATURA AUTOMATICA 
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
FASE_AUTO_TERMINA:
		LD      A,(MEMB)		;SBLOCCO GATE
		RES     6,A             
		LD      (MEMB),A
		OUT     (PB),A

		LD      A,43H			;RESETTO CTC1 COME CONTATORE CICLI DI FASE
		OUT     (CTC1_CMD),A         

		LD      A,00H			;RESET USCITE DI RICERCA
		LD      (ARR_RICAUTO+00H),A
		LD      (ARR_RICAUTO+02H),A
                LD      (ARR_RICAUTO+0AH),A
                LD      A,02H			;NUMERO SEGNI PRIMA DI DOPPIO
                LD      (ARR_RICAUTO+06H),A
FASE_AUTO_TERMINA_FINE:
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		CONTROLLO DELL'ERRORE ATTUALE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

ERR_CALC:
		;CALCOLO RAPPORTO POSIZINE PIENO S1

	        LD      DE,(ERATTU)     ;MEMORIZZO ERRORE
		LD      (ERPREC),DE     ;PRECEDENTE

                LD      A,(MSCORR)      ;
		LD      IX,PIENO1       ;DIVIDO PIENO
		LD      E,(IX+00H)      ;PER DIECI
		LD      D,(IX+01H)      ;E SOTTRAGGO
		LD      (DIVDEN),DE     ;IL RISULTATO
		LD      BC,000AH        ;A POSIZIONE
		LD      (DIVSOR),BC     ;SE IL RISULTATO
		CALL    DIVIS           ;E' NEGATIVO
		LD      IX,QUOZIE       ;VUOLE DIRE CHE
		LD      E,(IX+00H)      ;DIVIDENDO
		LD      D,(IX+01H)      ;POSIZIONE X 10
		LD      IY,POSIZ1       ;CON PIENO AVRO'
		LD      L,(IY+00H)      ;UN NUMERO MINORE
		LD      H,(IY+01H)      ;DI 0,1 PER CUI
		SBC     HL,DE           ;CARICO IN MEM.
		JR      C,RAPP10        ;RAPPORTO ZERO.
		LD      E,(IY+00H)      ;SE LA SOTTRZIONE
		LD      D,(IY+01H)      ;NON DA RISULTATO
		LD      (MOLTI),DE      ;NEGATIVO PROCEDO
		LD      A,0AH           ;NELLA DIVISIONE
		LD      (MOLPL),A       ;POSIZIONE X 10
		CALL    MOLT            ;DIVISO PIENO
		LD      IX,PROD         ;E OTTERRO'UN
		LD      C,(IX+00H)      ;RISULTATO 
		LD      B,(IX+01H)      ;COMPRESO 
		LD      (DIVDEN),BC     ;TRA 0,1 E 0,9
		LD      IY,PIENO1
		LD      E,(IY+00H)
		LD      D,(IY+01H)
		LD      (DIVSOR),DE
		CALL    DIVIS
                LD      DE,(QUOZIE)
		JR      RAPP11
RAPP10:         CCF
                LD      DE,0000H
RAPP11:         LD      (RAPPO1),DE     

		LD      A,(MEMRIF)	;VERIFICO SE E' STATO TROVATO IL SEGNO DI REGISTRO DURANTE LA RICERCA AUTOMATICA 
		CP      00H
                JR      Z,RAPP2

		;SE SONO SUBITO DOPO FASATURA, ANNULLO LA MEDIA
		LD	DE,0000H
	        LD      (ERATTU),DE
		CALL	RESET_MEDIA

		LD      DE,(RAPPO1)     ;PER MEMORIZZARE I RIFERIMENTI QUESTI VENGONO MEMORIZZATI DOPO 4 GIRI
                LD      (RAPRIF),DE
		LD      DE,(FASES1)
		LD      (FASRIF),DE

		LD      HL,MEMRIF	;DECREMENTO MEMRIF
		DEC     (HL)

                LD      A,(MEMRIF)      ;QUANDO ARRIVO A ZERO ESEGUO IL CALCOLO DEL RIFTOT
                CP      00H
                JR      NZ,RAPP2

                LD      DE,(FASRIF)
		LD      (MOLTI),DE
		LD      A,0AH
		LD      (MOLPL),A
		CALL    MOLT
		LD      DE,(PROD)
                LD      HL,(RAPRIF)
		ADD     HL,DE
                LD      (RIFTOT),HL

		;JP	ERR_CALC_FINE


		;CALCOLO DELL'ERRORE IN CENTESIMI ED
		;EVENTUALE CORREZIONE DA ESEGUIRE
                ;(FASRIF-FASES1)+(RAPRIF-RAPPO1)= ERRORE
		;(FASRIFx10)+RAPRIF=RIFTOT
                ;(FASES1x10)+RAPPO1=POSTOT
		;(RIFTOT-POSTOT):10=ERRORE IN DECIMI

RAPP2:          LD      DE,(FASES1)     ;FASES1 x 10
		LD      (MOLTI),DE
		LD      A,0AH
		LD      (MOLPL),A
		CALL    MOLT
		LD      DE,(PROD)
                LD      HL,(RAPPO1)
		ADD     HL,DE
		LD      (POSTOT),HL
		EX      DE,HL
		LD      HL,(RIFTOT)     ;FLO1 PUNTO A
		SBC     HL,DE
                JR      C,ERR1
		EX      DE,HL
                LD      HL,(AMPI10)     ;VEDO SE ERRORE 
                SBC     HL,DE           ;E'> DI AMPI10
		EX      DE,HL
                JR      NC,INDRE        ;FLO1 PUNTO B
		CCF
		LD      HL,(RIFTOT)     ;FLO1 PUNTO C
		LD      DE,(POSTOT)
		SBC     HL,DE
		EX      DE,HL
		LD      HL,0A000H       ;40960
		SBC     HL,DE
                JR      INNAS
ERR1:           CCF
		LD      HL,(POSTOT)     ;FLO1 PUNTO D
		LD      DE,(RIFTOT)
		SBC     HL,DE
		EX      DE,HL
                LD      HL,(AMPI10)     ;FLO1 PUNTO E  
		SBC     HL,DE
		EX      DE,HL
                JR      NC,INNAS
		CCF
		LD      HL,0A000H       ;40960
		LD      DE,(POSTOT)     ;FLO1 PUNTO F
		SBC     HL,DE
		LD      BC,(RIFTOT)
		ADD     HL,BC



INDRE:   
		;SE SONO ABILITATI I DAC SALTO IL REV_CORRECTION 162
		LD	A,(ENB_DAC_LON)
		CP	00H
		JR	Z,INDRE1
		LD	A,(ENB_DAC_TRA)
		CP	00H
		JR	Z,INDRE1
		LD	A,(ENB_DAC_TIR)
		CP	00H
		JR	Z,INDRE1

	        LD	A,(REV_CORRECTION);INSERITO INVERSIONE 
                BIT     0,A		  ;CORREZIONE E DIVENTA 162
                JR      Z,INNAS1       
INDRE1:
		LD	A,(MSCORR_ATT)
		LD	(MSCORR_PREC),A
		LD      A,D_RITARDO     ;SEGNALAZIONE
		LD      (MSCORR),A      ;CORREZ. RITARDO
		LD	(MSCORR_ATT),A
                JR      ERR2
INNAS:      
		;SE SONO ABILITATI I DAC SALTO IL REV_CORRECTION 162
		LD	A,(ENB_DAC_LON)
		CP	00H
		JR	Z,INNAS1
		LD	A,(ENB_DAC_TRA)
		CP	00H
		JR	Z,INNAS1
		LD	A,(ENB_DAC_TIR)
		CP	00H
		JR	Z,INNAS1

		LD	A,(REV_CORRECTION);INSERITO INVERSIONE
                BIT     0,A		;CORREZIONE E DIVENTA 162
                JR      Z,INDRE1       
INNAS1:
		LD	A,(MSCORR_ATT)
		LD	(MSCORR_PREC),A
		LD      A,D_AVANTI      ;SEGNALAZIONE
		LD      (MSCORR),A      ;CORREZ. AVANTI
		LD	(MSCORR_ATT),A

		;(ERR.xCENT.IN DIV.ENC.):10=ERR.IN CENTESIMI


ERR2:           LD      (MOLTI),HL      ;HL CONTIENE ERR.
		LD      A,(CENTES)
		LD      (MOLPL),A
		CALL    MOLT
		LD      DE,(PROD)
		LD      (DIVDEN),DE     ;PRIMA DIVISIONE
		LD      BC,000AH        ;PER DIECI
		LD      (DIVSOR),BC
		CALL    DIVIS
		LD      DE,(QUOZIE)
		LD      (ERATTU),DE
                

		LD      A,(SALTO)       ;SE SALTO E'
                CP      00H             ;ZERO CORREGGO
                JR      Z,ERR_CALC_FINE ;SEMPRE
                LD      HL,0064H        ;SOMMO A ERPREC   
		LD      BC,(ERPREC)     ;1mm IL RISULTATO
		ADD     HL,BC           ;LO SOTTRAGGO A
		SBC     HL,DE           ;ERATTU SE CARRY
                JR      NC,ERR4         ;SE VI E' STATA  
		CCF                     ;UNA LETTURA SBAL-
		LD      BC,(ERPREC)     ;LATA LA IGNORO.
		LD      (ERATTU),BC
                LD      A,(CONSAL)      ;CONTROLLA CHE NON
		DEC     A               ;CHE NON RIMANGA
		LD      (CONSAL),A      ;IN BLOCCO PER PIU'
		CP      00H             ;DI N GIRI MEMORIZZATI 
                JR      Z,ERR3          ;IN SALTO E POI
		JR	ERR_CALC_FINE   

ERR3:           LD      (ERATTU),DE     ;RICARICA L'ULTIMO
		LD      (ERPREC),DE     ;ERRORE LETTO
ERR4:                            
                LD      A,(SALTO)       ;CARICA I GIRI DI
		LD      (CONSAL),A      ;ATTESA.

ERR_CALC_FINE:           
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		CONTROLLO CHE NON CI SIA UN'ALTRO
;		AVVISO RICHIESTA DI TRASMISSIONE IN CORSO
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

REQISFREE:	
		LD	DE,(WATCHDOG_ST7_L)	;RESET WATCHDOG CON IL VALORE 
		LD	(WATCHDOG_ST7_L_TMP),DE	;PRECALCOLATO
		LD	DE,(WATCHDOG_ST7_H)
		LD	(WATCHDOG_ST7_H_TMP),DE


REQISFREE_LOOP:
		
		;CONTROLLO SE WATCHDOG E' ARRIVATO A 0
		LD	DE,WATCHDOG_ST7_H_TMP
		LD	(COUNTER32),DE
		CALL	CHK32

		LD	DE,(COUNTER32)
		LD	A,D
		AND	E
		CP	0FFH
		JP	Z,REQISFREE_TIMEOUT

		LD	DE,WATCHDOG_ST7_H_TMP
		LD	(COUNTER32),DE
		CALL	DEC32

		

		LD	A,(MEMA)		;CONTROLLO SE
		BIT	1,A			;SETTATO ESCI DAL LOOP
		JR	NZ,REQISFREE_LOOP	;ALTRIMENTI CICLA

		JR	REQISFREE_FINE

REQISFREE_TIMEOUT:

		JP	VIA			;RESET DELLO Z80

REQISFREE_FINE:
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		AVVISO RICHIESTA DI TRASMISSIONE 
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

REQUEST:			
		LD	A,(MEMA)	;SETTO
		SET	1,A		;OUTPA1
		LD	(MEMA),A
	 	OUT     (PA),A
		RET


;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUBROUTINE INVIO CODICE DI OK
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

SEND_OK:		
		LD	BC,0000H
		LD	(STATUS),BC
		CALL	FORCE_STATUS
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUBROUTINE PER FORZARE INVIO CODICE DI STATUS
;		ANCHE SE UGUALE AL PRECEDENTE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

FORCE_STATUS:
		LD	BC,0FFFFH
		LD	(STATU2),BC
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUBROUTINE INVIO CODICE DI STATUS
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

SEND_STATUS:	
		EXX
		LD	A,(STATUS)		;INVIA SONO SE DIVERSO DA PRECEDENTE
		LD	BC,(STATU2)
		CP	C
		JR	NZ,SEND_STATUS_DIFFERNT
		LD	A,(STATUS+01H)
		CP	B
		JR	NZ,SEND_STATUS_DIFFERNT
		JR	SEND_STATUS_FINE

SEND_STATUS_DIFFERNT:
		CALL	REQISFREE
		LD	A,(ANSWER)		;MANDA OK A
		LD	(ARR_TRASM+00H),A		;CPU	
		LD	A,00H
		LD	(ARR_TRASM+01H),A
		LD      A,(STATUS+01)
		LD	(ARR_TRASM+02H),A
		LD      A,(STATUS)
		LD	(ARR_TRASM+03H),A
		CALL	REQUEST

		LD	HL,(S_PERMANENT_MASK)	;AND CON LA MASCHERA DI BIT 
		LD	A,(STATUS)		;PERMANENTI
		AND	H
		LD	(STATUS),A
		LD	A,(STATUS+01H)
		AND	L
		LD	(STATUS+01H),A

		LD	BC,(STATUS)		;SALVO IL NUOVO STATO 
		LD	(STATU2),BC		;NELLO STATO PRECEDENTE

		EXX
SEND_STATUS_FINE:
		RET	

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUBROUTINE SETTA UNO STATUS
;		IPOTIZZA IL VALORE SIA NEL REGISTRO DE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

SET_STATUS:		
		LD	A,(STATUS)
		OR	D
		LD	(STATUS),A
		LD	A,(STATUS+01H)
		OR	E
		LD	(STATUS+01H),A
		RET

;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;		SUBROUTINE RESETTA UNO STATUS
;		IPOTIZZA IL VALORE SIA NEL REGISTRO DE
;&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

RES_STATUS:		
		LD	A,D		;COMPLEMENTO DE
		CPL	
		LD	D,A
